{
    "openComposedOutput": true,

    "deployment": {
        "enabled": true,
        "github": {
            "apiKey": "",
            "owner": "Proton-Utilities",
            "repo": "Atom"
        }
    },

    "buildConfigs": [
        {
            "name": "Debug",

            "promptVersion": false,
            "promptDeploy": false,

            "frame": "build/frame.luau",
            "darkluaConfig": "build/.darklua_debug.json",
            "input": "src/init.luau",
            "output": "dist/debug.luau"
        },

        {
            "name": "Beta",

            "promptVersion": true,
            "promptDeploy": true,
            "prerelease": true,

            "frame": "build/frame.luau",
            "darkluaConfig": "build/.darklua.json",
            "input": "src/init.luau",
            "output": "dist/pre.luau"
        },

        {
            "name": "Release",
            
            "promptVersion": true,
            "promptDeploy": true,

            "frame": "build/frame.luau",
            "darkluaConfig": "build/.darklua.json",
            "input": "src/init.luau",
            "output": "dist/release.luau"
        }
    ]
}